/*分享给其他*/
.share-other-containter{
	height:100%;background: url('../img/background_o.png') no-repeat;background-size:100% 100%;position:relative;
}

.share-other-containter .btn{width:150px;height:40px;position:absolute;bottom:25px;left:50%;margin-left:-75px;background: url('../img/btn_1.png') no-repeat;background-size:100% 100%;text-align: center;
	padding:10px 10px 10px;cursor: pointer;display: none;
}
.share-other-containter .btn span{color:#fff;letter-spacing: 2px;font-size:24px;display:block;width:120px;margin: 7px auto;
text-shadow:0px 3px 1px #6d6d6d;
-webkit-text-shadow:0px 3px 1px #6d6d6d;
-o-moz-shadow:0px 3px 1px #6d6d6d;
-o-text-shadow:0px 3px 1px #6d6d6d;
 }
.share-leader-pic{
position:absolute;top:0px;z-index:110;
 background-color: black;
 filter:alpha(opacity=50); 
-moz-opacity:0.5; 
opacity:0.5;
width: 100%;
height:100% 
}
.share-leader-pic img{
position: absolute;right:0;top:0;
width:70%;
}

